# Cloud Connect Backup Manager - Production Environment Configuration
# Copy this file to .env and fill in your values

# ======================
# DATABASE CONFIGURATION
# ======================
POSTGRES_DB=backup_manager
POSTGRES_USER=cloudconnect
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ======================
# REDIS CONFIGURATION
# ======================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE

# ======================
# SECURITY & ENCRYPTION
# ======================
# JWT Secret - Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_JWT_SECRET_64_CHARS_MINIMUM

# Encryption Key - MUST be exactly 32 bytes - Generate with: openssl rand -base64 32
ENCRYPTION_KEY=CHANGE_ME_ENCRYPTION_KEY_32_BYTES

# ======================
# APPLICATION URLS
# ======================
FRONTEND_URL=https://yourdomain.com
API_URL=https://api.yourdomain.com
PORT=8080

# ======================
# ENVIRONMENT
# ======================
ENV=production
LOG_LEVEL=info

# ======================
# ANALYTICS & MONITORING
# ======================
# Google Analytics 4
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager
GTM_ID=GTM-XXXXXXX

# PostHog (optional)
POSTHOG_API_KEY=your_posthog_key_here
POSTHOG_HOST=https://app.posthog.com

# Sentry Error Tracking (optional)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ======================
# EMAIL CONFIGURATION (optional)
# ======================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@cloudconnect.com

# ======================
# BACKUP STORAGE
# ======================
# AWS S3 for production backups (recommended)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1
AWS_S3_BUCKET=cloudconnect-backups

# ======================
# RATE LIMITING
# ======================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# ======================
# SSL/TLS CONFIGURATION
# ======================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ======================
# FEATURE FLAGS
# ======================
ENABLE_REGISTRATION=true
ENABLE_API_KEYS=true
ENABLE_WEBHOOKS=true
MAX_FILE_SIZE_MB=50
MAX_BACKUPS_PER_USER=1000
